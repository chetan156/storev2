<script type="text/javascript">

    $(document).ready(function () {
        debugger;
        var oTable = $("#tblCatagoryList").dataTable({
            "bFilter": true,
            "bProcessing": true,
            "bServerSide": true,
            "aaSorting": [[0, "asc"]],
            "sAjaxSource": "/Catagory/CatagoryList2?catagoryname=&companyname=",
            "aoColumns": [
                        { "Name": "Index", "sWidth": "10px" },
                        { "Name": "CatagoryName" },
                        { "Name": "CompanyName" },

                        { "Name": "Id", "bSearchable": false, "bSortable": false, "fnRender": function (oObj) { return oObj.aData[3] } },
                        { "Name": "Id", "bSearchable": false, "bSortable": false, "fnRender": function (oObj) { return oObj.aData[4] } }
            ]
        });
        $("#btnSearch").click(function () {
            var oSettings = oTable.fnSettings();
            oSettings.sAjaxSource = "/Catagory/CatagoryList2?catagoryname=" + $("#txtSearchCatagoryName").val()
                + "&companyname=" + $("#txtSearchCompanyName").val()
            oTable.fnFilter("0", "0")
        });
    });
</script>


