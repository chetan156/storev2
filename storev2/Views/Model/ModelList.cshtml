<script type="text/javascript">

    $(document).ready(function () {
        debugger;
        var oTable = $("#tblModelList").dataTable({
            "bFilter": true,
            "bProcessing": true,
            "bServerSide": true,
            "aaSorting": [[0, "asc"]],
            "sAjaxSource": "/Model/ModelList?company=&category=",
            "aoColumns": [
                        { "Name": "Index", "sWidth": "10px" },
                        { "Name": "ModelName" },
                        { "Name": "CompanyName" },
                        { "Name": "CatagoryName" },
                        { "Name": "ModelId", "bSearchable": false, "bSortable": false, "fnRender": function (oObj) { return oObj.aData[4] } },
                        { "Name": "ModelId", "bSearchable": false, "bSortable": false, "fnRender": function (oObj) { return oObj.aData[5] } }

            ]
        });
        $("#btnSearch").click(function () {
            var oSettings = oTable.fnSettings();
            oSettings.sAjaxSource = "/Model/ModelList?company=" + $("#txtSearchCompanyName").val()
                + "&category=" + $("#txtSearchCatagoryName").val()
            oTable.fnFilter("0", "0") 
        });
    });
</script>


